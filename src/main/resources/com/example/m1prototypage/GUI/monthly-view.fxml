<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.m1prototypage.controller.MonthlyController">
    <VBox alignment="CENTER_LEFT" spacing="20">

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="previousMonthButton" text="&lt; Précédent" onAction="#handlePreviousMonth"/>
            <Label fx:id="currentMonthLabel" text="Mois actuel" />
            <Button fx:id="nextMonthButton" text="Suivant &gt;" onAction="#handleNextMonth"/>
        </HBox>

        <GridPane fx:id="monthGrid" alignment="CENTER" hgap="10" styleClass="grid-pane" vgap="10">
            <!-- Dynamically add day and date Labels here in the controller -->
        </GridPane>
    </VBox>
</StackPane>
