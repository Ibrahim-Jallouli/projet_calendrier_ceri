<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fitToWidth="true" fitToHeight="true"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.m1prototypage.controller.CalendarController">
    <VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-padding: 10px;"
          stylesheets="@../css/style.css">



    <!-- Barre de recherche -->
    <HBox spacing="10.0" style="-fx-alignment: CENTER;">
        <Label text="Recherche :" />
        <ComboBox fx:id="searchTypeComboBox" prefWidth="150.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Formation" />
                    <String fx:value="Enseignant" />
                    <String fx:value="Salle" />
                </FXCollections>
            </items>
        </ComboBox>
        <TextField fx:id="searchField" promptText="Entrez votre recherche" />
        <Button text="Rechercher" />
      <VBox.margin>
         <Insets top="12.0" />
      </VBox.margin>
    </HBox>

    <!-- Options de filtrage -->
       <HBox style="-fx-hgrow: ALWAYS;">

        <!-- Premier filtre -->
        <HBox style=" -fx-spacing: 10; -fx-padding: 10;">
            <Label text="Filtrer par :">
            <HBox.margin>
               <Insets right="15.0" />
            </HBox.margin></Label>
            <ComboBox fx:id="filterTypeComboBox" onAction="#handleFilterTypeSelection">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Matière" />
                        <String fx:value="Type" />
                        <String fx:value="Salle" />
                    </FXCollections>
                </items>
            <HBox.margin>
               <Insets right="12.0" />
            </HBox.margin>
            </ComboBox>

            <!-- ComboBox pour les valeurs de filtre -->
            <ComboBox fx:id="filterValueComboBox" onAction="#handleFilterValueChange" visible="false" prefWidth="150">
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
            </ComboBox>
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin>
        </HBox>

           <!-- Espace flexible entre les deux filtres -->
           <Region prefHeight="25.0" prefWidth="305.0" style="-fx-hgrow: ALWAYS;" />

        <!-- Deuxième filtre -->
        <HBox spacing="10.0"  style="-fx-padding: 10;">
            <Label text="Afficher par :" />
            <ComboBox fx:id="filterTimeBox" prefWidth="150.0">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Semaine" />
                        <String fx:value="Mois" />
                        <String fx:value="Jour" />
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
    </HBox>

    <!-- Contenu principal de l'emploi du temps -->
    <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-padding: 10px; HBox.hgrow=ALWAYS" >
        <Label style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="Votre emploi du temps" />
        <!-- Conteneur pour les vues dynamiques -->
        <StackPane fx:id="scheduleContainer" />
      <VBox.margin>
         <Insets top="15.0" />
      </VBox.margin>

    </VBox>



</VBox>
</ScrollPane>